
@{
    ViewData["Title"] = "Login";

    var rootPathPrefix = ViewBag.RootPathPrefix;
}

<div class="container" style="width:500px">

    <form name="f" action="@rootPathPrefix/login" method="post">
        <fieldset>

            <legend>Please Login</legend>
            
            @if (ViewBag.IsError)
            {
                <!-- If there was an error logging in, show an error alert -->
                <div th:if="${param.error}" class="alert alert-danger">
                    Invalid username and/or password.
                </div>
            }
            
            @if (ViewBag.IsLogout)
            {
                <!-- Show a message if you have been logged out -->
                <div th:if="${param.logout}" class="alert alert-success">
                    You have been logged out!
                </div>
            }
            
            @if (ViewBag.IsRegistered)
            {
                <!-- Show a message if you have registered successfully -->
                <div th:if="${param.registered}" class="alert alert-success">
                    Registered Successfully! You can now log in!
                </div>
            }

            <!-- username input -->
            <div class="control-group">
                <label class="control-label" for="username">Username</label>
                <input type="text" class="form-control" id="username" name="username" />
            </div>

            <!-- password inpurt -->
            <div class="control-group">
                <label class="control-label" for="password">Password</label>
                <input type="password" class="form-control" id="password" name="password" />
            </div>

            <!-- The login button -->
            <div style="padding-top: 10px">
                <button type="submit" class="btn btn-primary">Log in</button>
            </div>

        </fieldset>


    </form>


    <div style="padding-top: 15px"></div>
    <div id="divRegisterInfo" class="alert alert-info">
        Don't have an account? <a href="/register">Register</a>
    </div>

</div>
