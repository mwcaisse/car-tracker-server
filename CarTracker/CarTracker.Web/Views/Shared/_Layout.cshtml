@{
    var title = "Car Tracker";
    if (!string.IsNullOrEmpty(ViewData["Title"]?.ToString()))
    {
        title += ViewData["Title"];
    }


    var googleMapsApiKey = ViewBag.GoogleMapsApiKey;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />


    <!--  scripts -->
    <script type="text/javascript" src="/lib/jquery/js/jquery.js"></script>
    <script type="text/javascript" src="/lib/jquery-ui/js/jquery-ui.js"></script>
    <script type="text/javascript" src="/lib/popperjs/js/popper.min.js"></script>
    <script type="text/javascript" src="/lib/bootstrap/js/bootstrap.js"></script>
    <script type="text/javascript" src="/lib/lodash/js/lodash.js"></script>

    <script type="text/javascript" src="/lib/vue/js/vue.js"></script>

    <script type="text/javascript" src="/lib/moment/js/moment.js"></script>
    <script type="text/javascript" src="/lib/moment-timezone/js/moment-timezone.js"></script>
    <script type="text/javascript" src="/lib/moment-duration-format/js/moment-duration-format.js"></script>
    <script type="text/javascript" src="/lib/q/js/q.js"></script>
    <script type="text/javascript" src="/lib/require/js/require.js"></script>
    <script type="text/javascript" src="/lib/highcharts/js/highcharts.js"></script>


    <!-- css -->
    <link rel="stylesheet" href="/lib/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="/lib/jquery-ui/css/jquery-ui.css" />
    <link rel="stylesheet" href="/lib/highcharts/css/highcharts.css" />
    <link rel="stylesheet" href="/lib/font-awesome/css/font-awesome.css" />
    <link rel="stylesheet" href="/css/site.css" />
    
    <title>@title</title>

</head>

<body>
    <input id="googleMapsApiKey" type="hidden" value="@googleMapsApiKey" />
    <input id ="isAuthenticated" value="true" type="hidden" />

    <!--  need to load up the requrie config, after the google map api key -->
    <script src="/app/Common.js" type="text/javascript"></script>

    <!--  Element + vue model to load the navigation -->
    <div id="navigationvm">
        <script type="text/javascript">
			var navigationDeferred = Q.defer();
			var navigationPromise = navigationDeferred.promise;

			require(["Views/Navigation/Navigation"], function(navVm) {
				navVm("#navigationvm");

				navigationDeferred.resolve();
			});
        </script>
    </div>


    <!-- the body of the page -->
    <div class="content">
        <div class="container">
            @RenderBody()
        </div>
    </div>

    <!-- page footer -->
   
    <footer>
        @Html.Partial("_Footer")
    </footer>

</body>
</html>

